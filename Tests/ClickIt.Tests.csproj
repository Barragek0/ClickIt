<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <LangVersion>latest</LangVersion>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.6.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="3.0.4" />
    <PackageReference Include="MSTest.TestFramework" Version="3.0.4" />
    <PackageReference Include="FluentAssertions" Version="6.12.0" />
    <PackageReference Include="coverlet.collector" Version="3.2.0" />
    <PackageReference Include="coverlet.msbuild" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include Constants files directly to avoid build dependencies -->
    <Compile Include="..\Constants\AltarModsConstants.cs" />
    <Compile Include="..\Constants\Constants.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy constants to output for tests -->
    <None Include="..\Constants\AltarModsConstants.cs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Constants\Constants.cs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Include selected, dependency-light production files so coverage can instrument them without building the full plugin -->
    <Compile Include="..\Utils\LockManager.cs" />
    <Compile Include="..\Utils\WeightCalculator.cs" />
    <Compile Include="..\Utils\ModIndexConstants.cs" />
    <Compile Include="..\Utils\IndexConstants.cs" />
  </ItemGroup>

  <!-- By default exclude integration tests from the test build.
       They can be opt-in by setting the MSBuild property IncludeIntegrationTests=true.
       This keeps CI fast/isolated while allowing local builds (VS Code task) to include them. -->
  <ItemGroup>
    <Compile Remove="Integration\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(IncludeIntegrationTests)' == 'true'">
    <Compile Include="Integration\**\*.cs" />
  </ItemGroup>

</Project>