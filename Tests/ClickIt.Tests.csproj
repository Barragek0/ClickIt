<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <LangVersion>latest</LangVersion>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.6.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="3.0.4" />
    <PackageReference Include="MSTest.TestFramework" Version="3.0.4" />
    <PackageReference Include="FluentAssertions" Version="6.12.0" />
    <PackageReference Include="coverlet.collector" Version="3.2.0" />
    <PackageReference Include="coverlet.msbuild" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include Constants files directly to avoid build dependencies -->
    <Compile Include="..\Constants\AltarModsConstants.cs" />
    <Compile Include="..\Constants\Constants.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy constants to output for tests -->
    <None Include="..\Constants\AltarModsConstants.cs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Constants\Constants.cs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Include selected, dependency-light production files so coverage can instrument them without building the full plugin -->
    <Compile Include="..\Utils\LockManager.cs" />
    <Compile Include="..\Utils\WeightCalculator.cs" />
    <Compile Include="..\Utils\ModIndexConstants.cs" />
    <Compile Include="..\Utils\IndexConstants.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude archived/merged test sources so they don't compile as duplicate tests -->
    <Compile Remove="Constants\ConstantsTests.cs" />
    <Compile Remove="Decision\WeightCalculatorMoreTests.cs" />
    <Compile Remove="Decision\WeightCalculatorExtraTests.cs" />
    <Compile Remove="Decision\WeightCalculatorCompositeTests.cs" />
    <Compile Remove="Decision\WeightCalculatorAltarWeightsTests.cs" />
    <Compile Remove="Decision\WeightCalculatorAltarWeightsMixedTests.cs" />
    <Compile Remove="Decision\WeightCalculatorAltarWeightsEdgeTests.cs" />
    <Compile Remove="Services\LabelFilterServiceDeepTests.cs" />
    <Compile Remove="Utils\LockManagerTests.cs" />
    <Compile Remove="Services\GlobalLockManagerTests.cs" />
    <Compile Remove="ServiceIntegrationTests.cs" />
    <Compile Remove="PerformanceTimingTests.cs" />
    <Compile Remove="ConfigurationIntegrationTests.cs" />
    <Compile Remove="EndToEndScenarioTests.cs" />
    <Compile Remove="AltarDecisionIntegrationTests.cs" />
  <Compile Remove="Services\ElementServiceTests.cs" />
  <Compile Remove="Services\ClickServiceShouldClickAltarTests.cs" />
    <!-- Ensure integration folder files are NOT included in the default test run -->
    <Compile Remove="Integration\**\*.cs" />
    <Compile Remove="ARCHIVE\**\*.cs" />
  </ItemGroup>

  <!--
    To run integration tests locally or in CI, set the MSBuild property IncludeIntegrationTests=true
    Example: dotnet test "Tests/ClickIt.Tests.csproj" -p:IncludeIntegrationTests=true
  -->
  <ItemGroup Condition="'$(IncludeIntegrationTests)' == 'true'">
    <!-- When IncludeIntegrationTests is true, include all tests under Tests/Integration -->
    <Compile Include="Integration\**\*.cs" />
  </ItemGroup>

</Project>